@model URLShortener.Models.ApplicationUser

@{
    ViewBag.Title = "Index";
}

<h2>@Model.UserName's BookMarks</h2>

<div class="container">

    <table class="table">
        <tr>
            <th>
                Clicks
            </th>
            <th>
                Likes
            </th>
            <th>
                Title
            </th>
            <th>
                Url
            </th>
            <th>
                BookMark Link
            </th>
            <th>
                Decription
            </th>
            <th></th>
        </tr>

        @foreach (var item in ViewBag.UserBookMarks)
            {
            <tr>
                <td>
                    @item.ClickLogs.Count
                </td>
                <td>
                    @item.Favorites.Count
                </td>
                <td>
                    @Html.RouteLink((string)item.Title, new { HashLink = item.HashLink})
                </td>
                <td>
                    @Html.RouteLink((string)item.URL, new { HashLink = item.HashLink })
                </td>
                <td>
                    @Html.RouteLink("b/" + (string)@item.HashLink, new { HashLink = item.HashLink })
                </td>
                <td>
                    @item.Description
                </td>
            </tr>
        }

    </table>
    <p>
        @Html.ActionLink("Home", "Index", "Home")
    </p>
</div>