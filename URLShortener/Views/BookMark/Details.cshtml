@model URLShortener.Models.BookMark

@{
    ViewBag.Title = "Details";
}
<div class="container">
<h1>
    -BookMark Details-
</h1>
    <hr />
    <div>
        <p>
            <h2 class="post-title">
                @Model.Title
            </h2>
        </p>
        <hr />
      
         @if (Model.Description != null)
       {
        <p>
            <h3 class="post-subtitle">
                @Model.Description
            </h3>
        </p>
        <hr />
       }
        <p>
            <h4 class="post-subtitle">
                URL: @Model.URL
            </h4>
        </p>
        <hr />
        <p>
            <h4 class="post-subtitle">
                Shortened URL: b/@Model.HashLink
            </h4>
        </p>
        <hr />
        <p class="post-meta">BookMark clicked @Model.ClickLogs.Count times </p>
        <p class="post-meta">BookMark liked @Model.Favorites.Count times </p>
        <br/>
    
        @using (Html.BeginForm())
        {
            
            <br />
            if (ViewBag.liked == false)
            {   
                <p>
                    <input type="submit" class="btn btn-default active" name="command" value="Like"/>
                </p>
            }
            else if (ViewBag.liked == true)
            {

                <p><input type="submit" class="btn btn-default" value="Unlike" name="command"/></p>
            }
        }
        <br/>
    </div>
    <p>
        @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
        @Html.ActionLink("Delete", "Delete", new { id = Model.Id}) |
        @Html.ActionLink("Back to List", "Index")
    </p>
</div>